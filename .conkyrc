#avoid flicker
double_buffer yes

#own window to run 2 or more conkys simultaneously
own_window  yes
own_window_transparent no
own_window_type dock
own_window_hints undecorate,above,sticky,skip_taskbar,skip_pager

#borders
border_inner_margin 2
border_outer_margin 0
draw_borders no
draw_graph_borders no
border_width 0
#border_margin 3

#shades
draw_shades no

#position
#gap_x 20
#gap_y 50 does this do anything?
#alignment top_left

#behaviour
update_interval 1
update_interval_on_battery 1

#colour
color7 blue
color8 white
color9 red
default_color white
#default_shade_color 000000
own_window_colour 303030
#font
use_xft yes
#xftfont Meslo LG S DZ:size=8
xftfont DejaVu Sans Mono:size=10

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#to prevent window from moving
use_spacer right
minimum_size 1600 0
maximum_width 2040

default_graph_size 10 100
format_human_readable yes
short_units yes

TEXT
${memgraph 10,100 FF3300 FFAA00 -t -l} ${color darkgray}$memperc%${goto 140}\
${cpugraph cpu0 10,100 AA5500 AA8800 -t -l} ${color darkgray}$cpu%${goto 280}\
${diskiograph_read /dev/sda 10,100 663300 996633 -t -l} ↑${diskio_read /dev/sda} \
${diskiograph_write /dev/sda 10,100 663300 996633 -t -l} ↓${diskio_write} \
${if_existing /sys/class/net/eth0/operstate up}
${upspeedgraph eth0 10,100 CCCC00 FFFF00 -t -l} ↑${upspeed eth0} \
${downspeedgraph eth0 10,100 CCCC00 FFFF00 -t -l} ↓${downspeed eth0} \
${else}\
${upspeedgraph wlan0 10,100 AA7700 FFDD00 -t -l} ↑${upspeed wlan0} \
${downspeedgraph wlan0 10,100 AA7700 FFDD00 -t -l} ↓${downspeed wlan0} \
${wireless_link_qual_perc wlan0}\
${endif}\
$color$battery_short ${color darkgray}($battery_time) \
${alignr}\
$color${exec amixer get Master | egrep -o "\-?[0-9]+\.[0-9]+dB"} \
${color gray}${time %a} ${color}${time %e} ${color darkgray}${time %b} ${color}${time %l:%M}${color darkgray}:${time %S} \
